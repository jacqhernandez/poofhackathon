<!DOCTYPE html>
<html>
<head>
  <title>POOF AT GLOBE HACKATHON</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,900,700,500,100,300' rel='stylesheet' type='text/css'>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js">
  </script>
  <script src="https://cdn.rawgit.com/vast-engineering/jquery-popup-overlay/1.7.11/jquery.popupoverlay.js"></script>
  <script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
  <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
</head>
<body>

<% if !current_page?('/') %>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#"><img src="/assets/likomlogo.png" width="30px;"></a>
      </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if current_page?('/') %><li class="active"><% else%><li><% end %><a href="/">Home<span class="sr-only"></span></a></li>
          <% if current_page?('/view') %><li class="active"><% else%><li><% end %><a href="/view">View</a></li>
          <% if current_page?('/donate') %><li class="active"><% else%><li><% end %><a href="/donate">Donate</a></li>
          <% if current_page?('/prepare') %><li class="active"><% else%><li><% end %><a href="/prepare">Prepare</a></li>
          <% if current_page?('/about') %><li class="active"><% else%><li><% end %><a href="/about">About</a></li>
          <% if current_page?('/contact') %><li class="active"><% else%><li><% end %><a href="/contact">Contact</a></li>
          <% if lgu_officer_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_lgu_officer.first_name %> <%= current_lgu_officer.last_name %><span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/area">Residents</a></li>
                <li><a href="/responses">LGU Responses</a></li>
                <li><a href="/lgu_responses/new">Create LGU Response</a></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'Logout',  destroy_lgu_officer_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <% if current_page?('/lgu_officers/sign_in') %><li class="active"><% else%><li><% end %><%= link_to 'Login', new_lgu_officer_session_path %></li>
          <% end %>
        </ul>
      </div>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<% end %>

<%= yield %>

</body>
</html>
